<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.appmovil.ui.ui.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- REGISTRO -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.appmovil.ui.ui.ui.login.RegisterFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.appmovil.ui.ui.ui.home.HomeFragment"
        android:label="CatÃ¡logo"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />

        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />

        <action
            android:id="@+id/action_homeFragment_to_purchaseHistoryFragment"
            app:destination="@id/purchaseHistoryFragment" />

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <!-- DETALLE DE PRODUCTO -->
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.appmovil.ui.ui.ui.adapter.ProductDetailFragment"
        android:label="Detalle Producto"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="productoJson"
            app:argType="string" />
    </fragment>

    <!-- CARRITO -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.appmovil.ui.ui.ui.cart.CartFragment"
        android:label="Carrito"
        tools:layout="@layout/fragment_cart">

        <action
            android:id="@+id/action_cartFragment_to_orderSummaryFragment"
            app:destination="@id/orderSummaryFragment" />
    </fragment>

    <!-- RESUMEN DE COMPRA -->
    <fragment
        android:id="@+id/orderSummaryFragment"
        android:name="com.example.appmovil.ui.ui.ui.cart.OrderSummaryFragment"
        android:label="Resumen de compra"
        tools:layout="@layout/fragment_order_summary">

        <action
            android:id="@+id/action_orderSummaryFragment_to_orderStatusFragment"
            app:destination="@id/orderStatusFragment" />
    </fragment>

    <!-- ESTADO DEL PEDIDO -->
    <fragment
        android:id="@+id/orderStatusFragment"
        android:name="com.example.appmovil.ui.ui.ui.cart.OrderStatusFragment"
        android:label="Estado del Pedido"
        tools:layout="@layout/fragment_order_status" />

    <!-- HISTORIAL -->
    <fragment
        android:id="@+id/purchaseHistoryFragment"
        android:name="com.example.appmovil.ui.ui.ui.cart.PurchaseHistoryFragment"
        android:label="Historial de Compras"
        tools:layout="@layout/fragment_purchase_history" />

    <!-- PERFIL -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.appmovil.ui.ui.ui.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

</navigation>
