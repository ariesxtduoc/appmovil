<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- 1. LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.appmovil.ui.theme.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <!-- 2. REGISTRO -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.appmovil.ui.theme.ui.login.RegisterFragment"
        android:label="Registro"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- 3. HOME -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.appmovil.ui.theme.ui.home.HomeFragment"
        android:label="Catálogo"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />

        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />

        <!-- ⭐ NUEVA ACCIÓN: IR AL HISTORIAL DE COMPRAS -->
        <action
            android:id="@+id/action_homeFragment_to_purchaseHistoryFragment"
            app:destination="@id/purchaseHistoryFragment" />
    </fragment>

    <!-- 4. DETALLE DEL PRODUCTO -->
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.appmovil.ui.theme.ui.adapter.ProductDetailFragment"
        android:label="Detalle Producto"
        tools:layout="@layout/fragment_product_detail">

        <argument
            android:name="productoJson"
            app:argType="string" />
    </fragment>

    <!-- 5. CARRITO -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.appmovil.ui.theme.ui.cart.CartFragment"
        android:label="Carrito"
        tools:layout="@layout/fragment_cart">

        <!-- ⭐ Acción necesaria para el botón PAGAR -->
        <action
            android:id="@+id/action_cartFragment_to_orderSummaryFragment"
            app:destination="@id/orderSummaryFragment" />
    </fragment>

    <!-- 6. RESUMEN DE COMPRA -->
    <fragment
        android:id="@+id/orderSummaryFragment"
        android:name="com.example.appmovil.ui.theme.ui.cart.OrderSummaryFragment"
        android:label="Resumen de compra"
        tools:layout="@layout/fragment_order_summary" />

    <!-- ⭐ 7. HISTORIAL DE COMPRAS -->
    <fragment
        android:id="@+id/purchaseHistoryFragment"
        android:name="com.example.appmovil.ui.theme.ui.cart.PurchaseHistoryFragment"
        android:label="Historial de Compras"
        tools:layout="@layout/fragment_purchase_history" />

</navigation>
